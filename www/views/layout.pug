doctype html
html
  head
    title= 'Eve Who - ' + title
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content= 'Eve Who - ' + title)
    
    // OpenGraph tags
    meta(property='og:title', content= 'Eve Who - ' + title)
    if details && details.character_id
      - var desc = title
      if details.corp_name
        - desc += '\nCorporation: ' + details.corp_name
      if details.alli_name
        - desc += '\nAlliance: ' + details.alli_name
      meta(property='og:description', content= desc)
      meta(property='og:image', content= 'https://images.evetech.net/characters/' + details.character_id + '/portrait?size=256')
    else if details && details.corporation_id && !details.character_id
      - var desc = title + ' (' + details.memberCount + ' members)'
      if details.alli_name
        - desc += '\nAlliance: ' + details.alli_name
      meta(property='og:description', content= desc)
      meta(property='og:image', content= 'https://images.evetech.net/corporations/' + details.corporation_id + '/logo?size=256')
    else if details && details.alliance_id && !details.corporation_id
      - var desc = title + ' (' + details.memberCount + ' members, ' + details.corp_count + ' corporations)'
      meta(property='og:description', content= desc)
      meta(property='og:image', content= 'https://images.evetech.net/alliances/' + details.alliance_id + '/logo?size=256')
    else
      meta(property='og:description', content= 'Eve Who - ' + title)
      meta(property='og:image', content='https://image.eveonline.com/Character/1_256.jpg')
    meta(property='og:site_name', content='Eve Who')
    meta(property='og:type', content='website')
    meta(name='twitter:card', content='summary')
    
